---
const { src = "/src/assets/mp3file/bransboynd-groovy-vibe-427121.mp3"} = Astro.props;
---

<div class="audio-container">
   
    <audio controls>
        <source src={src} type="audio/mpeg">
    </audio>
</div>

<style>
    .audio-container {
        background: #1a1c22;
        padding: 5px;
        border-radius: 12px;
        border: 1px solid #997800;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 10px;
        max-width: 300px;
        margin: 20px auto;
        box-shadow: 0 4px 15px rgb(0, 0, 0);
    }
</style>