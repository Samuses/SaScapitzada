---
interface Props {
  height?: string;
}

const { height = "300px" } = Astro.props;
---

<div class="carousel-wrapper" style={`--carousel-height: ${height};`}>
  <button class="nav-btn prev" aria-label="Previous slide">
    <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <polyline points="15 18 9 12 15 6"></polyline>
    </svg>
  </button>

  <div class="carousel-container">
    <div class="carousel">
      <slot />
    </div>
  </div>

  <button class="nav-btn next" aria-label="Next slide">
    <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <polyline points="9 18 15 12 9 6"></polyline>
    </svg>
  </button>
</div>

<style>
  .carousel-wrapper {
    position: relative;
    display: flex;
    align-items: center;
    width: 100%;
    overflow: hidden;
  }

  .carousel-container {
    width: 100%;
    overflow: hidden;
  }

  .carousel {
    display: flex;
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    gap: 1rem;
    /* Aumentato padding-bottom per evitare il taglio dell'ombra */
    padding: 1rem 30vw 2rem 30vw;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: none;
    scroll-behavior: smooth;
    cursor: grab;
    user-select: none;
    -webkit-user-select: none;
  }

  .carousel.active {
    cursor: grabbing;
    scroll-snap-type: none;
    scroll-behavior: auto;
  }

  .carousel::-webkit-scrollbar {
    display: none;
  }

  .nav-btn {
    background: rgba(255, 255, 255, 0.5);
    border: none;
    /* Altezza 100% e larghezza maggiore */
    height: 100%;
    width: 80px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    position: absolute;
    z-index: 20;
    top: 0;
    transition: all 0.2s ease;
    backdrop-filter: blur(2px);
    color: #000;
  }

  .nav-btn:hover {
    background: rgba(255, 255, 255, 0.8);
    color: #000;
  }

  .prev {
    left: 0;
  }

  .next {
    right: 0;
  }

  /* Applica lo stile agli elementi passati nello slot */
  .carousel > :global(*) {
    height: var(--carousel-height);
    flex: 0 0 auto;
    scroll-snap-align: center;
    border-radius: 0.5rem;
    overflow: hidden;
    position: relative; /* Aggiunto per ancorare il bordo ::after */
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
    transition: transform 0.3s ease;
  }

  /* NUOVO: Disegna il bordo sopra l'immagine */
  .carousel > :global(*)::after {
    content: "";
    position: absolute;
    inset: 0;
    border-radius: 0.5rem;
    border: 1px solid rgba(0, 0, 0, 0.1);
    pointer-events: none;
    z-index: 10;
  }

  .carousel > :global(*) > :global(img) {
    height: 100%;
    width: auto;
    object-fit: cover;
    display: block; /* Aggiunto per rimuovere spazi fantasma sotto le immagini */
    pointer-events: none;
  }
</style>

<script>
  document.querySelectorAll('.carousel-wrapper').forEach(wrapper => {
    const carousel = wrapper.querySelector('.carousel');
    const prevBtn = wrapper.querySelector('.prev');
    const nextBtn = wrapper.querySelector('.next');

    if (!carousel || !prevBtn || !nextBtn) return;

    const getScrollAmount = () => {
      const firstItem = carousel.firstElementChild;
      return firstItem ? firstItem.clientWidth + 16 : 300;
    };

    prevBtn.addEventListener('click', () => {
      carousel.scrollBy({ left: -getScrollAmount(), behavior: 'smooth' });
    });

    nextBtn.addEventListener('click', () => {
      carousel.scrollBy({ left: getScrollAmount(), behavior: 'smooth' });
    });

    let isDown = false;
    let startX;
    let scrollLeft;
    let snapTimeout;

    const snapToNearest = () => {
      const carouselRect = carousel.getBoundingClientRect();
      const carouselCenter = carouselRect.left + carouselRect.width / 2;

      let minDiff = Infinity;

      // Trova l'elemento piÃ¹ vicino al centro
      Array.from(carousel.children).forEach(item => {
        const itemRect = item.getBoundingClientRect();
        const itemCenter = itemRect.left + itemRect.width / 2;
        const diff = itemCenter - carouselCenter;

        if (Math.abs(diff) < Math.abs(minDiff)) {
          minDiff = diff;
        }
      });

      if (minDiff !== Infinity) {
        carousel.scrollBy({
          left: minDiff,
          behavior: 'smooth'
        });
      }

      // Riabilita lo snap CSS dopo l'animazione
      clearTimeout(snapTimeout);
      snapTimeout = setTimeout(() => {
        carousel.classList.remove('active');
      }, 600);
    };

    carousel.addEventListener('mousedown', (e) => {
      isDown = true;
      clearTimeout(snapTimeout); // Evita che lo snap precedente interferisca
      carousel.classList.add('active');
      startX = e.pageX - carousel.offsetLeft;
      scrollLeft = carousel.scrollLeft;
      e.preventDefault();
    });

    carousel.addEventListener('mouseleave', () => {
      if (!isDown) return;
      isDown = false;
      snapToNearest();
    });

    carousel.addEventListener('mouseup', () => {
      if (!isDown) return;
      isDown = false;
      snapToNearest();
    });

    carousel.addEventListener('mousemove', (e) => {
      if (!isDown) return;
      e.preventDefault();
      const x = e.pageX - carousel.offsetLeft;
      const walk = (x - startX) * 1; // Scroll 1:1
      carousel.scrollLeft = scrollLeft - walk;
    });
  });
</script>