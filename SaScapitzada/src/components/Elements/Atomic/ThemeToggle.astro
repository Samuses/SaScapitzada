---
/* ThemeToggle.astro */
---
<button id="theme-toggle" aria-label="Cambia tema">
  <svg class="sun-icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
    <circle cx="12" cy="12" r="5"></circle>
    <line x1="12" y1="1" x2="12" y2="3"></line>
    <line x1="12" y1="21" x2="12" y2="23"></line>
    <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"></line>
    <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"></line>
    <line x1="1" y1="12" x2="3" y2="12"></line>
    <line x1="21" y1="12" x2="23" y2="12"></line>
    <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"></line>
    <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"></line>
  </svg>

  <svg class="moon-icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
    <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
  </svg>
</button>

<style>
  button {
    background: rgba(255, 255, 255, 0.2); /* Sfondo bianco semitrasparente */
    border: 1px solid rgba(255, 255, 255, 0.3); /* Bordo sottile semitrasparente */
    cursor: pointer;
    color: var(--text-color); /* Prende il colore dal tema attuale */
    padding: 8px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
    backdrop-filter: blur(4px); /* Effetto sfocato dietro */
  }

  button:hover {
    background-color: rgba(255, 255, 255, 0.4); /* Più visibile al passaggio */
    border-color: rgba(255, 255, 255, 0.6);
  }

  /* Logica di visualizzazione icone basata sulla classe .dark del layout */
  .sun-icon { display: none; }
  .moon-icon { display: block; }

  :global(.dark) .sun-icon { display: block; }
  :global(.dark) .moon-icon { display: none; }
</style>

<script is:inline>
  const handleToggleClick = () => {
    const element = document.documentElement;
    element.classList.toggle("dark");

    const isDark = element.classList.contains("dark");
    localStorage.setItem("theme", isDark ? "dark" : "light");

    // Aggiorna tutti gli elementi che hanno un attributo 'mode'
    updateModeAttributes(isDark ? "dark" : "light");
  };

  const updateModeAttributes = (mode) => {
    // Seleziona tutti gli elementi nel DOM che hanno l'attributo 'mode'
    // Nota: Questo funzionerà solo se gli elementi hanno l'attributo 'mode' riflesso nel DOM.
    // Se 'mode' è solo una prop Astro che non viene renderizzata come attributo HTML,
    // questo script lato client non potrà trovarli.
    // Assicurati che i componenti che usano 'mode' lo passino al loro elemento radice HTML.
    const elementsWithMode = document.querySelectorAll('[mode]');

    elementsWithMode.forEach(el => {
      el.setAttribute('mode', mode);
    });
  };

  // Inizializzazione al caricamento della pagina
  const initTheme = () => {
    const theme = localStorage.getItem("theme");
    const isDark = theme === "dark" || (!theme && window.matchMedia("(prefers-color-scheme: dark)").matches);

    if (isDark) {
      document.documentElement.classList.add("dark");
    } else {
      document.documentElement.classList.remove("dark");
    }

    updateModeAttributes(isDark ? "dark" : "light");
  };

  document.getElementById("theme-toggle")?.addEventListener("click", handleToggleClick);

  // Esegui l'inizializzazione
  initTheme();
</script>