<style>
	.contact-section {
		padding: 3rem 1rem;
		text-align: center;
		color: white;
		font-family: system-ui, -apple-system, sans-serif;
	}

	.title {
		font-size: 1.8rem;
		font-weight: 300;
		margin-bottom: 2.5rem;
		letter-spacing: 0.5px;
	}

	.contact-container {
		display: flex;
		flex-wrap: wrap;
		justify-content: center;
		align-items: center;
		gap: 2rem 3rem;
		max-width: 1100px;
		margin: 0 auto;
	}

	.contact-item {
		display: flex;
		align-items: center;
		gap: 0.8rem;
		text-decoration: none;
		color: inherit;
		font-size: 1.1rem;
		transition: transform 0.2s ease, opacity 0.2s ease;
	}

	.contact-item:hover {
		opacity: 0.9;
		transform: translateY(-2px);
	}

	.icon {
		flex-shrink: 0;
	}

	/* Ho rimosso la classe .yt-icon-wrapper perché non serve più */

	.insta-icon-wrapper {
		background: linear-gradient(45deg, #f09433 0%, #e6683c 25%, #dc2743 50%, #cc2366 75%, #bc1888 100%);
		padding: 6px;
		border-radius: 6px;
		display: flex;
		align-items: center;
		justify-content: center;
	}

	@media (max-width: 768px) {
		.contact-container {
			gap: 1.5rem 2rem;
		}

		.contact-item {
			font-size: 1rem;
		}
	}

	@media (max-width: 500px) {
		.contact-container {
			flex-direction: column;
			align-items: flex-start;
			padding-left: 15%;
		}
	}
</style>